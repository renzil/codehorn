<div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <main class="mdl-layout__content mdl-color--grey-100">
      <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-grid">

        <!-- Container for the demo -->
        <div
          class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">

          <ul id="repos-list" class="mdl-list">
            <div class="repo-list-item-container">
              <p class="mdl-list__item-primary-content">littleonesbookhub</p>
              <div>
                <div class="mdl-spinner mdl-js-spinner is-active"></div>
                <i class="material-icons" style="display: none;">check_circle</i>
                <i class="material-icons" style="display: none;">notifications</i>
              </div>
            </div>
          </ul>

          <div class="mdl-card__title mdl-color--light-blue-600 mdl-color-text--white">
            <h2 class="mdl-card__title-text">GitHub Authentication with Popup</h2>
          </div>
          <div class="mdl-card__supporting-text mdl-color-text--grey-600">
            <p>Sign in with your GitHub account below.</p>

            <!-- Button that handles sign-in/sign-out -->
            <button disabled class="mdl-button mdl-js-button mdl-button--raised" id="quickstart-sign-in">Sign in with
              GitHub</button>

            <!-- Container where we'll display the user details -->
            <div class="quickstart-user-details-container">
              Firebase sign-in status: <span id="quickstart-sign-in-status">Unknown</span>
              <div>Firebase auth <code>currentUser</code> object value:</div>
              <pre><code id="quickstart-account-details">null</code></pre>
              <div>GitHub OAuth Access Token:</div>
              <pre><code id="quickstart-oauthtoken">null</code></pre>
            </div>
          </div>
        </div>
      </div>
    </main>
</div>